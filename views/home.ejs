<html>
    <head>
        <link rel="stylesheet" href="../public/style/home.css">
        <script src="../public/js/home.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <div class="header">
            <a href="http://localhost:8080/home"><h1>Home</h1></a>
            <a href="http://localhost:8080/postList"><h1>My post</h1></a>
            <a href="http://localhost:8080/new"><h1>New post</h1></a>
            <a class="profileShortcut" href="http://localhost:8080/profile">Profile</a>
        </div>

        <ul>
            <li>
                <%
                if(posts.length>0){
                    var i=1;
                    posts.forEach(function(data){
                %>
                <div class="post">
                    <div class="title">
                        <div class="vote">
                            <i class="fa fa-arrow-up" id="upvote" ></i>
                            <a id="votes">00</a>
                            <i class="fa fa-arrow-down" id="downvote" ></i>
                        </div>
                        <h2 class="postTitle"><%= data.title%></h2>
                        <% if(data.lock_by != null){ %>
                        <h3>(This post is locked)</h3><br>
                        <h4>Locked by user id: <%= data.lock_by%></h4>
                        <% } %>
                    </div>
                    <p class="postContent"><%= data.content%>
                    </p>
                    <div class="Tags">
                        <a>Confession</a>
                    </div>
                    <div class="postInfo">
                        <a><%= data.created_date%></a>
                    </div>
                </div>
                <%  i++; }) %>
                <% } else{ %>
                    <h1>No post</h1>
                <% } %>
            </li>
        </ul>
    </body>
    <style>
        #lock{
            color: yellow;
        }
        .header{
            background-color: aqua;
            display: inline-flex;
            width: 100%;
            border-radius: 5px;
        }
        .header>a{
            margin-right: 40px;
            margin-left: 20px;
            padding:0px;
        }
        .profileShortcut{
            position: absolute;
            right: 3%;
            top: 5%;
            font-size: 30px;
            font-weight: bold;
        }
        p{
            border: 1px solid black;
            width: 90%;
            padding: 5px;
            margin: auto;
        }
        body{
            margin: 10px;
        }
        a{
            text-decoration: none;
            color: black;
            margin: 0px;
        }
        ul{
            margin: auto;
            width: 80%;
        }
        li{
            list-style: none;
            margin: 10px;
        }
        .post{
            background-color: lightgray;
            width: 80%;
            border-radius: 20px;
            padding-left: 20px;
            padding-top: 5px;
            padding-bottom: 5px;
            margin-top: 15px;
        }
        .title{
            display: inline-flex;
            flex-direction: row;
        }
        .vote{
            display: inline-flex;
            flex-direction: column;
        }
        .postTitle{
            margin: 15px;
        }
        #upvote:hover{
            color: red;
        }
        #downvote:hover{
            color: blue;
        }
        .tags{
            margin: 20px;
            
        }
        h3{
            color: red;
        }
        .tags>a{
            background-color: blue;
            color: white;
            padding: 5px;
            border-radius: 5px;
        }
        .postInfo{
            display: inline-flex;
            flex-direction: row;
        }
        .postInfo>a{
            margin:0px 15px 0 15px;
        }
        .header>a:hover{
            background-color: white;
            border: 5px solid aqua;
            padding-left: 5px;
            padding-right: 5px;
            border-radius: 15px;
        }
        .comment{
            border: none;
            background-color: lightgray;
        }
        .comment:hover{
            background-color: dimgray;
            padding-left: 3px;
            padding-right: 3px;
            border: black 1px solid;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>

</html>
